<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:gravity="right"
        android:singleLine="true"
        android:textSize="13dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:clickable="false"
        android:gravity="right" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText2"
        android:layout_gravity="top|center"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1">

            <Button
                android:id="@+id/btnPi"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Pi" />

            <Button
                android:id="@+id/btnE"
                android:layout_weight="1"
                android:text="e" />

            <Button
                android:id="@+id/btnC"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:id="@+id/btnCe"
                android:layout_weight="1"
                android:text="CE" />

            <Button
                android:id="@+id/btnAns"
                android:layout_weight="1"
                android:text="Ans" />

            <Button
                android:id="@+id/btnBack"
                android:text="Back" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2">

            <Button
                android:id="@+id/btnSin"
                
                android:layout_weight="1"
                android:text="sin" />

            <Button
                android:id="@+id/btnExp"
                
                android:layout_weight="1"
                android:text="exp" />

            <Button
                android:id="@+id/btnPow"
                
                android:layout_weight="1"
                android:text="pow" />

            <Button
                android:id="@+id/btnLp"
                
                android:layout_weight="1"
                android:text="(" />

            <Button
                android:id="@+id/btnComma"
                
                android:layout_weight="1"
                android:text="," />

            <Button
                android:id="@+id/btnSetX1"
                
                android:layout_weight="1"
                android:text="SetX1" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3" >

            <Button
                android:id="@+id/btnCos"
                
                android:layout_weight="1"
                android:text="cos" />

            <Button
                android:id="@+id/btnLog"
                
                android:layout_weight="1"
                android:text="log" />

            <Button
                android:id="@+id/btnExclaim"
                
                android:layout_weight="1"
                android:text="!" />

            <Button
                android:id="@+id/btnRp"
                
                android:layout_weight="1"
                android:text=")" />

            <Button
                android:id="@+id/btnSqrt"
                
                android:layout_weight="1"
                android:text="sqrt" />

            <Button
                android:id="@+id/btnSetX2"
                
                android:layout_weight="1"
                android:text="SetX2" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4">

            <Button
                android:id="@+id/btnTan"
                
                android:layout_weight="1"
                android:text="tan" />

            <Button
                android:id="@+id/btn7"
                
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btnAdd"
                
                android:layout_weight="1"
                android:text="+" />

            <Button
                android:id="@+id/btnSetX3"
                
                android:layout_weight="1"
                android:text="SetX3" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5">

            <Button
                android:id="@+id/btnSinh"
                
                android:layout_weight="1"
                android:text="sinh" />

            <Button
                android:id="@+id/btn4"
                
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btnMin"
                
                android:layout_weight="1"
                android:text="-" />

            <Button
                android:id="@+id/btnX1"
                
                android:layout_weight="1"
                android:text="X1" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6" >

            <Button
                android:id="@+id/btnCosh"
                
                android:layout_weight="1"
                android:text="cosh" />

            <Button
                android:id="@+id/btn1"
                
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btnMul"
                
                android:layout_weight="1"
                android:text="*" />

            <Button
                android:id="@+id/btnX2"
                
                android:layout_weight="1"
                android:text="X2" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7" >

            <Button
                android:id="@+id/btnTanh"
                
                android:layout_weight="1"
                android:text="tanh" />

            <Button
                android:id="@+id/btn0"
                
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/btnEnter"
                android:layout_weight="1"
                android:text="=" />

            <Button
                android:id="@+id/btnDiv"
                
                android:layout_weight="1"
                android:text="/" />

            <Button
                android:id="@+id/btnX3"
                
                android:layout_weight="1"
                android:text="X3" />
        </TableRow>

    </TableLayout>

</RelativeLayout>